{
  "name": "nargotik/early-hints",
  "description": "Tiny PHP polyfill to send HTTP 103 Early Hints (Link: preload ...) safely and ergonomically.",
  "type": "library",
  "license": "MIT",
  "keywords": ["http", "early hints", "103", "performance", "preload", "link"],
  "authors": [
    { "name": "Daniel", "email": "nargotik@gmail.com" }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "Nargotik\\EarlyHints\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Nargotik\\EarlyHints\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox",
    "lint": "php -l src/EarlyHints.php && php -l src/PhpHeaderEmitter.php && php -l src/HeaderEmitter.php && php -l src/functions.php"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
